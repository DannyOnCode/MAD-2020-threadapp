<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseMemberCardConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/memberCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/memberCardConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/memberCardProfilePicture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/cornerforprofilepicture"
                android:src="@drawable/profilepictureempty"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/memberCardName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="John Appleseed"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/memberCardProfilePicture"
                app:layout_constraintTop_toTopOf="@+id/memberCardProfilePicture" />

            <TextView
                android:id="@+id/memberCardLevel"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Lvl 999"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/memberCardProfilePicture"
                app:layout_constraintTop_toBottomOf="@+id/memberCardDivider" />

            <TextView
                android:id="@+id/memberCardTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Legendary Server Member"
                android:textColor="#FF0000"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="@+id/memberCardName"
                app:layout_constraintStart_toStartOf="@+id/memberCardName"
                app:layout_constraintTop_toBottomOf="@+id/memberCardName" />

            <ProgressBar
                android:id="@+id/memberCardProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:progress="50"
                android:scaleY="5"
                app:layout_constraintBottom_toBottomOf="@+id/memberCardLevel"
                app:layout_constraintEnd_toEndOf="@+id/memberCardName"
                app:layout_constraintStart_toEndOf="@+id/memberCardLevel"
                app:layout_constraintTop_toTopOf="@+id/memberCardLevel" />

            <TextView
                android:id="@+id/memberCardExp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:fontFamily="@font/roboto_mono"
                android:gravity="center_vertical"
                android:text="625/842 xp"
                android:textAlignment="center"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/memberCardProgressBar"
                app:layout_constraintEnd_toEndOf="@+id/memberCardProgressBar"
                app:layout_constraintStart_toStartOf="@+id/memberCardProgressBar"
                app:layout_constraintTop_toTopOf="@+id/memberCardProgressBar" />

            <TextView
                android:id="@+id/memberCardDivider"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/memberCardProfilePicture" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>